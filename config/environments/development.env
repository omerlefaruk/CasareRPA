# ============================================================================
# CasareRPA Development Environment
# ============================================================================
# Use for local development with minimal configuration.
# Copy values to your root .env file or source directly.

# Debug mode
DEBUG=true
RELOAD=true

# Logging
LOG_LEVEL=DEBUG

# Database (local PostgreSQL)
DB_ENABLED=true
DB_HOST=localhost
DB_PORT=5432
DB_NAME=casare_rpa_dev
DB_USER=postgres
DB_PASSWORD=postgres

# In-memory queue (no PostgreSQL required for quick testing)
USE_MEMORY_QUEUE=true

# Orchestrator
ORCHESTRATOR_HOST=127.0.0.1
ORCHESTRATOR_PORT=8000

# CORS - allow all local origins
CORS_ORIGINS=http://localhost:5173,http://localhost:8000,http://127.0.0.1:5173,http://127.0.0.1:8000

# Robot
ROBOT_ENVIRONMENT=development
ROBOT_MAX_CONCURRENT_JOBS=1

# Rate limiting disabled for development
RATE_LIMIT_ENABLED=false

# Security - relaxed for development
ROBOT_AUTH_ENABLED=false
VERIFY_SSL=false

# API secret (generate your own for real development)
API_SECRET=dev_secret_change_this_in_production_32chars
