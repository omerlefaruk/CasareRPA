# ============================================================================
# CasareRPA Staging Environment
# ============================================================================
# Use for pre-production testing with production-like settings.

# Debug off but verbose logging
DEBUG=false
RELOAD=false
LOG_LEVEL=INFO

# Database (staging PostgreSQL)
DB_ENABLED=true
# DATABASE_URL=postgresql://user:pass@staging-db.example.com:5432/casare_staging

# Real job queue
USE_MEMORY_QUEUE=false

# Orchestrator
ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_PORT=8000
ORCHESTRATOR_WORKERS=2

# CORS - staging domains
# CORS_ORIGINS=https://staging.casare.net,https://staging-app.casare.net

# Robot
ROBOT_ENVIRONMENT=staging
ROBOT_MAX_CONCURRENT_JOBS=2

# Rate limiting enabled
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=200

# Security - enabled but relaxed timeouts
ROBOT_AUTH_ENABLED=true
VERIFY_SSL=true

# Supabase (staging project)
# SUPABASE_URL=https://staging-project.supabase.co
# SUPABASE_KEY=your_staging_anon_key

# API secret (use different secret for each environment)
# API_SECRET=<generate with: python -c "import secrets; print(secrets.token_hex(32))">

# Metrics
METRICS_ENABLED=true
METRICS_COLLECTION_INTERVAL=10
