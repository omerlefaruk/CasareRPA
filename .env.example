# CasareRPA Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ===================================================================
# Enable/disable database (set to false to use in-memory fallback)
DB_ENABLED=true

# Database type
DB_TYPE=postgresql

# PostgreSQL connection details
DB_HOST=localhost
DB_PORT=5432
DB_NAME=casare_rpa
DB_USER=casare_user
DB_PASSWORD=your_password_here

# ===================================================================
# JOB QUEUE CONFIGURATION (PgQueuer)
# ===================================================================
# Full PostgreSQL connection string for PgQueuer
# Format: postgresql://user:password@host:port/database
PGQUEUER_DB_URL=postgresql://casare_user:your_password_here@localhost:5432/casare_rpa

# Queue fallback mode (ONLY for development without PostgreSQL)
# Set to true to use in-memory asyncio.Queue (jobs lost on restart)
USE_MEMORY_QUEUE=false

# ===================================================================
# ORCHESTRATOR API CONFIGURATION
# ===================================================================
# Orchestrator API base URL (used by Canvas and Robots)
ORCHESTRATOR_URL=http://localhost:8000

# API port (if running locally)
ORCHESTRATOR_PORT=8000

# ===================================================================
# WORKFLOW STORAGE CONFIGURATION
# ===================================================================
# Directory for workflow JSON backups (dual storage with PostgreSQL)
WORKFLOWS_DIR=./workflows

# Enable filesystem backup alongside PostgreSQL storage
WORKFLOW_BACKUP_ENABLED=true

# ===================================================================
# ROBOT AGENT CONFIGURATION
# ===================================================================
# Robot identifier (must be unique per robot instance)
ROBOT_ID=robot-001

# Robot display name
ROBOT_NAME=MyRobot

# Orchestrator WebSocket URL for robot connection
ORCHESTRATOR_WS_URL=ws://localhost:8000

# Execution mode filter (lan, internet, or both)
# ROBOT_EXECUTION_MODE=lan

# ===================================================================
# CREDENTIAL MANAGEMENT (HashiCorp Vault)
# ===================================================================
# Vault server address
VAULT_ADDR=http://127.0.0.1:8200

# Vault authentication (choose one method)
# Method 1: Token authentication
VAULT_TOKEN=your-vault-token

# Method 2: AppRole authentication
# VAULT_ROLE_ID=your-role-id
# VAULT_SECRET_ID=your-secret-id

# ===================================================================
# CLOUD SYNC (Optional - Supabase)
# ===================================================================
# Supabase project URL (for cloud orchestrator sync)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your-supabase-anon-key

# ===================================================================
# MONITORING & LOGGING
# ===================================================================
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log directory
# LOG_DIR=./logs

# Enable metrics collection
# METRICS_ENABLED=true

# Metrics port (Prometheus-compatible)
# METRICS_PORT=9090

# ===================================================================
# DEVELOPMENT SETTINGS
# ===================================================================
# Enable debug mode (verbose logging, auto-reload)
# DEBUG=false

# Enable hot-reload for development
# RELOAD=false

# CORS allowed origins (comma-separated)
# CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ===================================================================
# OPTIONAL: SCHEDULING
# ===================================================================
# Timezone for cron schedules (default: UTC)
# TZ=UTC

# Max concurrent scheduled jobs
# MAX_CONCURRENT_SCHEDULES=10
