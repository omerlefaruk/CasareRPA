# ============================================================================
# CasareRPA Production Environment
# ============================================================================
# Production settings - NEVER commit with real secrets!
# Use environment variables or secrets management for actual values.

# Production mode
DEBUG=false
RELOAD=false
LOG_LEVEL=INFO

# Database (Supabase PostgreSQL)
DB_ENABLED=true
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Connection pool (higher for production)
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_COMMAND_TIMEOUT=60.0

# Real job queue
USE_MEMORY_QUEUE=false

# Orchestrator
ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_PORT=8000
ORCHESTRATOR_WORKERS=4

# SSL (required for production)
# SSL_KEYFILE=/etc/ssl/private/casare.key
# SSL_CERTFILE=/etc/ssl/certs/casare.crt

# CORS - production domains only
# CORS_ORIGINS=https://casare.net,https://app.casare.net

# Robot
ROBOT_ENVIRONMENT=production
ROBOT_MAX_CONCURRENT_JOBS=3

# Rate limiting - stricter in production
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Security - fully enabled
ROBOT_AUTH_ENABLED=true
VERIFY_SSL=true

# Supabase (production project)
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_KEY=[YOUR-ANON-KEY]
SUPABASE_SERVICE_KEY=[YOUR-SERVICE-KEY]

# API secret (REQUIRED for production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# API_SECRET=<your_production_secret>

# Metrics
METRICS_ENABLED=true
METRICS_COLLECTION_INTERVAL=5

# Timeouts - tighter in production
ROBOT_HEARTBEAT_TIMEOUT=60
WS_PING_INTERVAL=20

# Vault (optional - for credential management)
# VAULT_ADDR=https://vault.example.com:8200
# VAULT_ROLE_ID=<role_id>
# VAULT_SECRET_ID=<secret_id>

# Cloudflare Tunnel (if using)
# CASARE_API_URL=https://api.casare.net
# CASARE_WEBHOOK_URL=https://webhooks.casare.net
# CASARE_ROBOT_WS_URL=wss://robots.casare.net

# Multi-tenant (if applicable)
# TENANT_ID=<your_tenant_uuid>
