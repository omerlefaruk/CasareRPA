# CasareRPA Docker Compose Environment Template
# Copy this file to .env and update values for your environment
# DO NOT commit .env to version control

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=casare_rpa
POSTGRES_USER=casare
POSTGRES_PASSWORD=changeme  # CHANGE IN PRODUCTION!
DB_HOST_PORT=5433

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST_PORT=6380

# =============================================================================
# Orchestrator Configuration
# =============================================================================
ORCHESTRATOR_HOST_PORT=8001
ORCHESTRATOR_WORKERS=4

# For cloud deployments, use 1-2 workers
# ORCHESTRATOR_WORKERS=1

# =============================================================================
# Security
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=change-me-in-production
API_SECRET=change-me-in-production

# Allow development mode (disable in production)
JWT_DEV_MODE=false

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8001

# =============================================================================
# Robot Configuration
# =============================================================================
# Number of robot replicas (docker compose --profile prod up -d --scale browser-robot=5)
ROBOT_REPLICAS=2
ROBOT_API_KEY=

# Heartbeat timeout in seconds
ROBOT_HEARTBEAT_TIMEOUT=90

# Default job timeout in seconds
JOB_TIMEOUT_DEFAULT=3600

# WebSocket ping interval in seconds
WS_PING_INTERVAL=30

# =============================================================================
# Application Environment
# =============================================================================
CASARE_ENV=production  # development|staging|production
CASARE_LOG_LEVEL=INFO  # DEBUG|INFO|WARNING|ERROR
TZ=UTC

# =============================================================================
# Supabase Integration (Optional)
# =============================================================================
SUPABASE_URL=
SUPABASE_KEY=

# =============================================================================
# Monitoring & Analytics (Optional)
# =============================================================================
PROMETHEUS_HOST_PORT=9090
GRAFANA_HOST_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_ROOT_URL=http://localhost:3000

# =============================================================================
# Development Tools (Optional)
# =============================================================================
PGADMIN_HOST_PORT=5050
PGADMIN_EMAIL=admin@local.dev
PGADMIN_PASSWORD=admin

REDIS_COMMANDER_PORT=8081

# =============================================================================
# Custom Network Configuration (Advanced)
# =============================================================================
# Default subnet for docker network
# CASARE_NETWORK_SUBNET=172.28.0.0/16
