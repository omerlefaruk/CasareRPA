# CasareRPA Docker Deployment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=casare
POSTGRES_PASSWORD=changeme_in_production
DATABASE_URL=postgresql://casare:changeme_in_production@db:5432/casare_rpa

# =============================================================================
# Security Configuration
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-secure-secret-key-here
JWT_DEV_MODE=false

# =============================================================================
# Application Configuration
# =============================================================================
CASARE_ENV=production
CASARE_LOG_LEVEL=INFO

# =============================================================================
# Redis Configuration (Optional)
# =============================================================================
REDIS_URL=redis://redis:6379

# =============================================================================
# Monitoring Configuration
# =============================================================================
GRAFANA_PASSWORD=admin

# =============================================================================
# Supabase Configuration (Optional - for cloud features)
# =============================================================================
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your-anon-key

# =============================================================================
# DBOS Cloud Configuration (Optional)
# =============================================================================
# DBOS_API_KEY=your-dbos-api-key
# DBOS_ORG_ID=your-org-id
